@charset "utf-8";
/* CSS Document */
.navbox{ padding:25px 0 ; background:#fff; margin-bottom:7px;}
.navbox a,.navbox navigator{ display:block; float:left; width:25%; text-align:center;}
.navbox a i,.navbox navigator i{ display:block; margin:0 auto; margin-bottom:10px; width:45px; height:45px;}
.navbox a i.xf,.navbox navigator i.xf{ background:url(https://static.soufunimg.com/common_m/m_wechat/public/images/icon_xf.png) no-repeat; background-size:100%;}
.navbox a i.esf,.navbox navigator i.esf{ background:url(https://static.soufunimg.com/common_m/m_wechat/public/images/icon_esf.png) no-repeat; background-size:100%;}
.navbox a i.cfj,.navbox navigator i.cfj{ background:url(https://static.soufunimg.com/common_m/m_wechat/public/images/icon_cfj.png) no-repeat; background-size:100%;}
.navbox a i.jsq{ background:url(https://static.soufunimg.com/common_m/m_wechat/public/images/icon_fdjsq.png) no-repeat; background-size:100%;}
.navbox a p,.navbox navigator p{ font-size:12px; color:#000; line-height:1;}
.search{ position:relative; padding:8px;margin:0 auto; background:#efeff4;border-bottom:1px solid #d6d6db;z-index:2;}
.searbox{ position: relative; height:28px; font-size:14px; border:1px solid #e6e6ea; border-radius:4px; overflow: hidden;}
.searbox .ipt{ position: relative; margin-right:48px; padding-left:80px; background-color:#fff;}/*2017.1.20*/
.searbox .ipt .sear-icon{ left:67px;}
.searbox .ipt input{padding: 0 4px; border: none; width: 84%; height: 28px;font-size: 14px;outline: none;-webkit-appearance: none;color:#0c0d0e;}
.searbox .ipt input::-webkit-input-placeholder{color:#888888;line-height:16px;}
.searbox .ipt .off{ position: absolute; top: 50%; margin-top: -12px; right:6px; display: block; width: 24px; height: 24px; background:#fff url(http://static.soufunimg.com/common_m/m_wechat/public/images/search_off.png) center no-repeat; background-size: 14px auto;}
.searbox .btn{ position:absolute; right:0;top:0;width:41px; height:28px; line-height:26px; text-align:center;border-left:1px solid #e5e7ed;border-radius:0 3px 3px 0;background:#f3f5f7;}
.searbox .btn i{ margin-top:6px; display:inline-block; width:17px; height:17px; background:url(http://static.soufunimg.com/common_m/m_wechat/public/images/icon_search.png) 0 0 no-repeat; background-size:15px auto;}/*20170103 end*/
.stag span.ching{ background:#fff; border:1px solid #4fb6bf; color:#4fb6bf;}
.stag span.purple{ background:#fff; border:1px solid #c88bf5; color:#c88bf5;}
.stag span.pink-2{ background:#fff; border:1px solid #ffc2c3; color:#ff9596;}
/*搜索下拉菜单、新房/二手房*/
.searchDrop{ position:absolute; top:0; left:0; width:67px; text-align:center;}
.searchDrop a{ position:relative; display:inline-block; padding-right:12px; font-size:13px; line-height:28px; color:#353535; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; -ms-box-sizing: border-box; box-sizing: border-box;}
.searchDrop a:after{content:'';position:absolute; width:0; height:0; border-style:solid; border-width:4px; border-color:#bcbec1 transparent transparent transparent; right:0; top:50%;margin-top:-2px;}
.searchDrop a i{ margin-right:1em;}
/*下拉菜单*/
.dropBox{ display: none; position: absolute; top:49px; left:7px; background-color:#3b3b3b;z-index: 101; border-radius:5px;box-shadow:1px 1px 4px  rgba(5,0,1,0.3);}
.dropBox li{height:45px;line-height:45px;border-bottom:1px solid #505052; text-align:left;font-size:16px;color:#fff;white-space: nowrap;overflow:hidden;}
.dropBox li:last-child{ border-bottom: none;}
.dropBox li i{position:relative;float:left;width:20px;height:20px;margin:11px 13px 12px 0;}
.dropBox li i.xf{background:url(http://static.soufunimg.com/common_m/m_wechat/public/images/dropicon_xf.png) no-repeat;background-size:20px auto;}
.dropBox li i.esf{background:url(http://static.soufunimg.com/common_m/m_wechat/public/images/dropicon_esf.png) no-repeat;background-size:20px auto;}
.dropBox li span.space2{margin-right:1em;}
.dropBox > i{position:absolute;top:-5px;left:20px;width:10px;height:5px;overflow:hidden;}
.dropBox > i:before{position:absolute;content:'';width:10px;height:10px;top:2px;left:50%;margin-left:-5px;background-color: rgba(60,63,70,.9);border-radius:2px;-webkit-transform:rotate(45deg);transform:rotate(45deg);}
.dropBox li > a{display:block;padding:0 20px 0 15px;color:#fff!important; border-radius:5px;-webkit-tap-highlight-color: rgba(0,0,0,0);}
.dropBox li > a:active{background:#474749;}
.dropBox li.cur > a{background:#474749;}
/*2017.1.20 end*/
/* 红绿上下箭头 */
.jtd-dn,.jt-dn{ position:relative; padding-left:0;padding-right:10px; color: #8cbe4c !important;}
.jtd-dn:after,.jt-dn:after{ position:absolute;left:auto; right:0; top:-4px; content: '↓';}
.jtd-up,.jt-up{ position:relative;padding-left:0; padding-right:10px; color: #df3031 !important;}
.jtd-up:after,.jt-up:after{ position:absolute;left:auto; right:0; top:-4px; content: '↑';}
